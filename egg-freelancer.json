    "scripts": {
        "installation": {
            "script": "#!/bin/bash\n\n# Setze den Frontend-Modus auf noninteractive\nexport DEBIAN_FRONTEND=noninteractive\nexport TZ=Europe/Berlin\n\n# Aktivieren der i386 Architektur\ndpkg --add-architecture i386\n\n# Update und Installation der notwendigen Pakete\napt-get update\napt-get install -y xvfb fluxbox x11vnc wget unzip wine wine32 winbind novnc websockify winetricks cabextract p7zip-full\n\n# Zeitzone setzen\nln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone\n\n# Aufräumen\nrm -rf /var/lib/apt/lists/*\n\n# Winetricks: DirectPlay, riched30 und vcrun6sp6 installieren\nwinetricks -q directplay riched30 vcrun6sp6\n\n# Skripte in das Serververzeichnis kopieren\nmkdir -p /mnt/server\n\n# Angepasste Skripte herunterladen\ncurl -o /mnt/server/start.sh https://deinserver.com/pfad/zu/start.sh\nchmod +x /mnt/server/start.sh\n\ncurl -o /mnt/server/server_config.sh https://deinserver.com/pfad/zu/server_config.sh\nchmod +x /mnt/server/server_config.sh\n\n# Freelancer.iso herunterladen, falls ISO_URL gesetzt ist\nif [ -n \"${ISO_URL}\" ]; then\n    wget -O /mnt/server/Freelancer.iso \"${ISO_URL}\"\nfi\n\n# Datenverzeichnis erstellen\nmkdir -p /mnt/server/data\n",
            "container": "ghcr.io/pterodactyl/installers:debian",
            "entrypoint": "bash"
        }
    },
